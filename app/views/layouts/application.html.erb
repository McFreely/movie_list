	<head>
		<title><%= title %></title>
    	<%= csrf_meta_tags %>
		<%= render 'layouts/stylesheets' %>
	</head>

	<body>
  		<div class="container">
			<%= render 'layouts/header' %>
			<p class="notice"><%= notice %></p>
			<p class="alert"><%= alert %></p>
			
			<!-- the section balises are inside the yielded content for better grid reading -->
    		<%= yield %>
	
			<%= render 'layouts/footer' %>
			<%= debug(params) if Rails.env.development? %>
	
  		</div>
	</body>
</html>