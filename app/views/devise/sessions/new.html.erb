<section class="row">
<h3>Sign in</h3>

<%= form_for(resource, :html => { :class => 'nice'}, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div><%= f.label :email %><%= f.email_field :email %></div></br>

  <div><%= f.label :password %><%= f.password_field :password %></div></br>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %><%= f.label :remember_me %></div></br>
  <% end -%>

  <div><%= f.submit "Sign in", :class => 'button small radius blue' %></div>
<% end %>

<%= render "links" %>
</section>